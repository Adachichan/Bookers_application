<div class = "edit-screen">
  <h1>Editing Book</h1>

  <% if @book.errors.any? %>
    <p><b class = "error-number"><%= @book.errors.count %>errors prohibited this book from being saved:</b></p>
    <ul>
      <% @book.errors.full_messages.each do |massage| %>
        <li class = "error-contents"><b><%= massage %></b></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model:@book, url: book_path(@book.id), method: :patch do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <p>
  <%= f.submit 'Update Book', class:'update-button' %>
  </p>
  <% end %>

  <p class = "edit-screen-link">
    <%= link_to "show", book_path %>
    <span> | </span>
    <%= link_to "Back",  books_path %>
  </p>

</div>
