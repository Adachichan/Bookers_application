<div class = "main-screen">

  <section class = "index-screen">
    <h1>Books</h1>
    <table>
      <tr>
        <th class = "index-headline">Title</th>
        <th class = "index-headline">Body</th>
      </tr>
      <% @books.each do |book| %>
      <tr>
        <td class = "index-book-title"><%= book.title %></td>
        <td class = "index-book-body"><%= book.body %></td>
        <td class = "index-link"><%= link_to "Show", book_path(book.id) %></td>
        <td class = "index-link"><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td class = "index-link"><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
      <% end %>
    </table>
  </section>

  <section class = "new-screen">
    <h2>New Book</h2>

    <% if @book.errors.any? %>
      <p><b class = "error-number"><%= @book.errors.count %>errors prohibited this book from being saved:</b></p>
      <ul>
        <% @book.errors.full_messages.each do |massage| %>
          <li class = "error-contents"><b><%= massage %></b></li>
        <% end %>
      </ul>
    <% end %>

    <%= form_with model:@book, url: books_path, method: :post do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <p>
    <%= f.submit 'Create Book', class:'new-button' %>
    </p>
    <% end %>

  </section>

</div>
