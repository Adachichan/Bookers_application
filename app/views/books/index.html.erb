<div class = "main-screen">






  <div class = "new-screen">
    <h2>New Book</h2>

    <%= form_with model:@list, url: '/books', method: :post do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <p>
    <%= f.submit 'Create Book', class:'Button' %>
    </p>
    <% end %>

  </div>
</div>
